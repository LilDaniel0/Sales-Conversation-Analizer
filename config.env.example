# Configuración para el procesador de conversaciones de WhatsApp

OPENAI_API_KEY=APIKEY

# Configuración del modelo Whisper
# Opciones: tiny, base, small, medium, large
WHISPER_MODEL=base

# Idioma para transcripción (opcional, dejar vacío para auto-detectar)
WHISPER_LANGUAGE=es

# Directorio de entrada para chats de WhatsApp
INPUT_DIRECTORY=input_data/whatsapp_chats

# Directorio de salida para datos procesados
OUTPUT_DIRECTORY=output_data/

# Nivel de logging
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Archivo de texto para procesar chat
TEXT_FILE=output_data/chat.txt

